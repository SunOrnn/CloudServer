<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="src.main.com.ornn.sso.mapper.OauthUserDetailsMapper">
    <sql id="Base_Column_List">
        user_name, password, salt, nick_name, mobile, gender, authorities, non_expired, non_locked, credentials_non_expired, enabled, create_time, create_by, update_time, update_by
    </sql>

    <select id="getUserDetails" resultType="src.main.com.ornn.sso.entity.po.OauthUserDetailsPO">
        select
        <include refid="Base_Column_List"/>
        from oauth_user_details
        where user_name = #{userName}
    </select>

</mapper>